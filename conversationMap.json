{
    "use-localization": false,
    "locale": null,
    "localization-strings-files": null,
    "actions": {
        "schedule-appointment": {
            "task": {
                "uri": "https://www.carshop.com/api/v1/schedule-appointment",
                "method": "post"
            },
            "conversation": [
                {
                    "field": "car-details",
                    "opening": [
                        {
                            "await-confirmation": false,
                            "messages": [
                                [
                                    "You want to schedule an appointment!",
                                    "Perfect!",
                                    "Let's start by getting some information about your car."
                                ]
                            ]
                        },
                        {
                            "await-confirmation": true,
                            "message": [
                                "Are you ready?"
                            ],
                            "confirm": {
                                "continue": true,
                                "exit": false,
                                "reset": false,
                                "skip-opening": false,
                                "reiterate": false,
                                "message": {
                                    "messages": [
                                        [
                                            "Great!"
                                        ]
                                    ]
                                }
                            },
                            "decline": {
                                "exit": true,
                                "message": {
                                    "messages": [
                                        [
                                            "Ok, I'm ready when you are! just let me know!"
                                        ]
                                    ]
                                }
                            }
                        }
                    ],
                    "questions": [
                        {
                            "field": "car-make",
                            "await-anwser": true,
                            "await-confirmation": true,
                            "messages": [
                                [
                                    "What is the your car make?"
                                ]
                            ]
                        },
                        {
                            "field": "car-model",
                            "await-anwser": true,
                            "await-confirmation": true,
                            "message": [
                                [
                                    "What is the your car make?"
                                ]
                            ]
                        },
                        {
                            "field": "car-year",
                            "await-anwser": true,
                            "await-confirmation": true,
                            "message": [
                                [
                                    "What year is your car?"
                                ]
                            ]
                        }
                    ],
                    "closing": [
                        {
                            "await-confirmation": true,
                            "message": [
                                [
                                    "Thank you, is this information correct?",
                                    "%(car-details.car-make)s",
                                    "%(car-details.car-make)s",
                                    "%(car-details.car-make)s"
                                ]
                            ],
                            "confirm": {
                                "constinue": true
                            },
                            "decline": {
                                "reset": false,
                                "skip-opening": false,
                                "message": {
                                    "messages": [
                                        [
                                            "Sorry about that.",
                                            "Let's try this again!"
                                        ]
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "greetings": {
            "task": null,
            "conversation": [
                {
                    "opening": [
                        {
                            "messages": [
                                [
                                    "hello!",
                                    "howdy!",
                                    "how can I help?"
                                ]
                            ]
                        }
                    ]
                }
            ]
        },
        "help": {
            "task": null,
            "conversation": [
                {
                    "opening": [
                        {
                            "await-confirmation": false,
                            "messages": [
                                [
                                    "How can I help you with?",
                                    "I can provide you with information about different things :)",
                                    "Hours of operation, costs of service or the closest location!"
                                ]
                            ]
                        }
                    ]
                }
            ]
        },
        "get-location": {
            "task": {
                "uri": "https://www.carshop.com/api/v1/get-location",
                "method": "get"
            },
            "response": {
                "sucess": [
                    {
                        "messages": [
                            [
                                "Our shop is located at:",
                                "%(response.body.address)s"
                            ]
                        ]
                    }
                ]
            }
        }
    }
}