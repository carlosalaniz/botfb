{
    "use_localization": false,
    "locale": null,
    "localization_strings_files": null,
    "actions": {
        "schedule_appointment": {
            "task": {
                "uri": "https://www.carshop.com/api/v1/schedule_appointment",
                "method": "post"
            },
            "conversation": [
                {
                    "field": "car_details",
                    "opening": [
                        {
                            "await_confirmation": false,
                            "messages": [
                                [
                                    "You want to schedule an appointment!",
                                    "Perfect!",
                                    "Let's start by getting some information about your car."
                                ]
                            ]
                        },
                        {
                            "await_confirmation": true,
                            "message": [
                                "Are you ready?"
                            ],
                            "confirm": {
                                "continue": true,
                                "exit": false,
                                "reset": false,
                                "skip_opening": false,
                                "reiterate": false,
                                "message": {
                                    "messages": [
                                        [
                                            "Great!"
                                        ]
                                    ]
                                }
                            },
                            "decline": {
                                "exit": true,
                                "message": {
                                    "messages": [
                                        [
                                            "Ok, I'm ready when you are! just let me know!"
                                        ]
                                    ]
                                }
                            }
                        }
                    ],
                    "questions": [
                        {
                            "field": "car_make",
                            "await_anwser": true,
                            "await_confirmation": true,
                            "messages": [
                                [
                                    "What is the your car make?"
                                ]
                            ]
                        },
                        {
                            "field": "car_model",
                            "await_anwser": true,
                            "await_confirmation": true,
                            "message": [
                                [
                                    "What is the model of your car?"
                                ]
                            ]
                        },
                        {
                            "field": "car_year",
                            "await_anwser": true,
                            "await_confirmation": true,
                            "message": [
                                [
                                    "What year is your car?"
                                ]
                            ]
                        }
                    ],
                    "closing": [
                        {
                            "await_confirmation": true,
                            "message": [
                                [
                                    "Thank you, is this information correct?",
                                    "%(car_details.car_make)s",
                                    "%(car_details.car_make)s",
                                    "%(car_details.car_make)s"
                                ]
                            ],
                            "confirm": {
                                "continue": true
                            },
                            "decline": {
                                "reset": true,
                                "skip_opening": false,
                                "message": {
                                    "messages": [
                                        [
                                            "Sorry about that.",
                                            "Let's try this again!"
                                        ]
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "greetings": {
            "task": null,
            "conversation": [
                {
                    "opening": [
                        {
                            "messages": [
                                [
                                    "hello!",
                                    "howdy!",
                                    "how can I help?"
                                ]
                            ]
                        }
                    ]
                }
            ]
        },
        "help": {
            "task": null,
            "conversation": [
                {
                    "opening": [
                        {
                            "await_confirmation": false,
                            "messages": [
                                [
                                    "How can I help you?",
                                    "I can provide you with information about different things :)",
                                    "Hours of operation, costs of service or the closest location!"
                                ]
                            ]
                        }
                    ]
                }
            ]
        },
        "get_location": {
            "task": {
                "uri": "https://www.carshop.com/api/v1/get_location",
                "method": "get"
            },
            "response": {
                "success": [
                    {
                        "messages": [
                            [
                                "Our shop is located at:",
                                "%(response.body.address)s"
                            ]
                        ]
                    }
                ]
            }
        }
    }
}